[
    {
        "description": "If the roots of either the merge patch or target resource documents are JSON Arrays, the target resource is replaced, in whole, by the merge patch document.",
        "tests" : [
            {
                "target": null,
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": false,
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": true,
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": 1,
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": "c",
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": { "c": "d" },
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": {
                    "c": [ "d", "e" ]
                },
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": [ "c", "d" ],
                "patch": [ "a", "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": [ "c", "d" ],
                "patch": { "a": "b" },
                "exepected": { "a": "b" }
            }
        ]
    },
    {
        "description": "Any null member contained in the merge patch MUST be ignored and treated as if those members are undefined.",
        "tests" : [
            {
                "target": [ "d" ],
                "patch": [ "a", null, "b" ],
                "exepected": [ "a", "b" ]
            },
            {
                "target": [ "d" ],
                "patch": { "a": null },
                "exepected": { }
            },
            {
                "target": [ "d" ],
                "patch": {
                    "a": "b",
                    "c": null
                },
                "exepected": { "a": "b" }
            }
        ]
    }
]
